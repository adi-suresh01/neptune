{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Neptune",
  "version": "0.1.0",
  "identifier": "com.neptune.desktop",
  "build": {
    "frontendDist": "/Users/adi/Desktop/neptune/neptune-frontend/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd /Users/adi/Desktop/neptune/neptune-frontend && npm run dev",
    "beforeBuildCommand": "cd /Users/adi/Desktop/neptune/neptune-frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Neptune",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "AI Knowledge Graph",
    "longDescription": "Transform your notes into intelligent knowledge graphs",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ],
    "resources": [
      "binaries/neptune-backend"
    ]
  }
}
